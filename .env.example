# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Google OAuth Configuration (Legacy - keep for rollback)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Composio Configuration (NEW - for migration)
COMPOSIO_API_KEY=your_composio_api_key_here
USE_COMPOSIO=false  # Set to 'true' to enable Composio integration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# Token Encryption
TOKEN_ENCRYPTION_KEY=your_encryption_key_here

# Redis Configuration (for webhook deduplication)
REDIS_URL=redis://localhost:6379

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Gmail Webhook Configuration (Legacy)
GMAIL_PUBSUB_TOPIC=projects/your-project/topics/gmail-notifications
WEBHOOK_DOMAIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Webhook Renewal
WEBHOOK_RENEWAL_INTERVAL=6  # hours
